# Application Settings
APP_NAME="PubSec Info Assistant"
APP_VERSION="0.1.0"
ENVIRONMENT="dev"
DEBUG="false"
LOG_LEVEL="INFO"

# API Server
HOST="0.0.0.0"
PORT="8000"
RELOAD="true"
WORKERS="1"

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY="your-secret-key-minimum-32-characters-long-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
CORS_ORIGINS='["http://localhost:3000","http://localhost:8000"]'

# Multi-Tenancy
TENANT_HEADER_NAME="X-Tenant-ID"
DEFAULT_TENANT_ID="default"
MAX_TENANTS="1000"

# Qdrant Vector DB
QDRANT_HOST="localhost"
QDRANT_PORT="6333"
QDRANT_API_KEY=""
QDRANT_HTTPS="false"
QDRANT_PREFIX="tenant"
VECTOR_SIZE="1536"

# Redis Cache
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB="0"
REDIS_PASSWORD=""
REDIS_TTL_SECONDS="3600"
REDIS_MAX_CONNECTIONS="50"

# OpenAI (REQUIRED - Add your API key)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORG_ID=""
OPENAI_EMBEDDING_MODEL="text-embedding-ada-002"
OPENAI_LLM_MODEL="gpt-4-turbo-preview"
OPENAI_MAX_TOKENS="2000"
OPENAI_TEMPERATURE="0.0"

# Document Ingestion
CHUNK_SIZE="512"
CHUNK_OVERLAP="102"
MAX_FILE_SIZE_MB="50"
ALLOWED_EXTENSIONS='[".html",".pdf",".docx",".txt"]'
OCR_ENABLED="true"
OCR_LANGUAGE="eng"

# Observability
METRICS_ENABLED="true"
METRICS_PORT="9090"
TRACING_ENABLED="false"
TRACING_ENDPOINT="http://localhost:4317"
TRACING_SAMPLE_RATE="0.1"

# Cost Tracking
COST_TRACKING_ENABLED="true"
COST_PER_1K_INPUT_TOKENS="0.0001"
COST_PER_1K_OUTPUT_TOKENS="0.0002"
COST_PER_1K_EMBEDDINGS="0.0001"
